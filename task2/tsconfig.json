{
  "compilerOptions": {
    "target": "es2018",
    "module": "es6",
    "moduleResolution": "Node",
    //    "lib": [
    //      "es2018",
    //      "esnext.asynciterable"
    //    ],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    // "declaration": true,
    // "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // "files": ["./src/view"],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    ".eslintrc.js"
  ]
}